<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="110dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/tableItemLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discountTypeLayout"
            android:background="@drawable/rectangle_ash_fill_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/tableNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tableNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1"
                android:textColor="@color/redColor"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableNameTextView"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tableChairsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableNameTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_chair_blue"
                android:gravity="center"
                android:text="3"
                android:textSize="16dp" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:id="@+id/tableRelativeLayout"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/total_rounded_ash_fill_bg"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tableIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/table" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tableCustomerIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_supervisor_account_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tableNumber1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableIv"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tablePersonsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableIv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tableNumbesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center_horizontal"
            android:text="5"
            android:layout_marginLeft="-5dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tableWithChairsIv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/empty_four_table"
            android:layout_below="@+id/tableNumbesTextView"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tableChairs1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center_horizontal"
            android:text="5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>