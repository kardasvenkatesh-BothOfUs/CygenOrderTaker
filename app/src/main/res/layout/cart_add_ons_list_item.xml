<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/lightAshColor"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_below="@+id/lineView"
            android:layout_gravity="center"
            android:background="@color/logoBgColor"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/addOnNameTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1.7"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Item Name 1 item Name 2 item Name 3 item Name 2 item Name 3"
                android:textColor="@color/lightblue"
                android:textSize="12sp" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/lightAshColor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/addOnPriceTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:inputType="phone"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:text=" 1 "
                android:textColor="@color/lightblue"
                android:textSize="@dimen/_12dp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/lightAshColor"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/add_on_cart_minus_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:padding="4dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_remove_circle_outline_24_black"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/addOnQtyTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="20"
                    android:textColor="@color/lightblue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_on_cart_plus_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_add_circle_outline_24_black"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/lightAshColor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/addOnSubTotalTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.6"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="$3.00"
                android:textColor="@color/lightblue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/lightAshColor"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/addOnDeleteTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="6dp"

                android:src="@drawable/ic_baseline_delete_outline_24"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>