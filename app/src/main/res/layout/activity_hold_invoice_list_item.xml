<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:layout_gravity="center"
        android:background="@color/logoBgColor"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/holdListIdTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Item Name 1 item Name 2 item Name 3"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/holdListDateTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Item Name 1 item Name 2 item Name 3"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />


        <TextView
            android:id="@+id/holdListRefIdTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Item Name 1 item Name 2 item Name 3"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"></TextView>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/holdListDeleteIv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:src="@drawable/ic_baseline_delete_outline_24" />

            <ImageView
                android:id="@+id/holdListEditIv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:src="@drawable/ic_baseline_edit_24" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>