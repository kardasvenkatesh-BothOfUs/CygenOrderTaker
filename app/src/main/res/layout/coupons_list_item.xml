<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="-3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/organic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/couponNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:maxLines="3"
                android:lineSpacingExtra="8dp"
                android:padding="5dp"
                android:text="Item Name Item Name Item Name Item Name Item Name Item Name Item Name Item Name"
                android:textColor="@color/colorDarkAsh"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/couponDiscountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/couponNameTv"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:maxLines="3"
                android:padding="5dp"
                android:text="40% off"
                android:alpha="0.7"
                android:textColor="@color/addOnOrange"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/couponDiscountTextTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/couponDiscountTv"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:maxLines="3"
                android:padding="5dp"
                android:text="Your entire purchase!"
                android:alpha="0.7"
                android:textColor="@color/addOnOrange"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/applyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_green_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:paddingLeft="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/couponDiscountTextTv"
                android:paddingRight="20dp"
                android:text="Apply Coupon"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>