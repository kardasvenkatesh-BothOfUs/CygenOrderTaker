<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:background="@color/logoBgColor"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_margin="10sp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/returnitemNameTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-3dp"
            android:paddingLeft="10sp"
            android:text="Item Name 1 item Name 2 item Name 3"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/lightAshColor"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/returnpriceInvoiceTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="0.75"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:inputType="phone"
            android:paddingTop="4dp"
            android:text=" 1 "
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/lightAshColor"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/returnqtyTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="20"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/lightAshColor"
            android:visibility="gone" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/returnDiscountTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.75"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="$543.00"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/lightAshColor"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/returnTotalTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.75"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="$543.00"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:visibility="gone">



            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/retrunItemCheckBox"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:visibility="gone"></androidx.appcompat.widget.AppCompatCheckBox>


        </RelativeLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>