<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_filled"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Payments"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_weight="2">

                        <LinearLayout
                            android:id="@+id/calciLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/lightAshColor"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/calculationEt"
                                        android:layout_width="300dp"
                                        android:layout_height="45dp"
                                        android:background="@drawable/rectangle_ash_line"
                                        android:paddingLeft="5dp"></EditText>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="Payment Type"
                                        android:visibility="gone"
                                        android:textColor="@color/colorBlack">

                                    </TextView>

                                    <Spinner
                                        android:id="@+id/paymentTypeSpinner"
                                        android:layout_width="110dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/rectangle_ash_line"
                                        android:paddingLeft="5dp"
                                        android:visibility="gone"
                                        android:text="Cash"></Spinner>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/oneTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/twoTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="2"
                                    android:gravity="center"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/threeTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="3"
                                    android:gravity="center"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/additionTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:background="@drawable/border_filled"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="+"
                                    android:textColor="@color/colorWhite"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/fourTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="4"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/fiveTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="5"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/sixTV"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="6"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/minusTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="-"
                                    android:textColor="@color/colorWhite"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/sevenTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="7"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/eightTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="8"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/nineTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="9"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/multiplyTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="*"
                                    android:textColor="@color/colorWhite"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/dotTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="."
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/zeroTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/equalsTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="="
                                    android:textColor="@color/colorWhite"></TextView>

                                <TextView
                                    android:id="@+id/divideTv"
                                    android:layout_width="75dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="/"
                                    android:textColor="@color/colorWhite"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/clearTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/border_filled"
                                    android:gravity="center"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="30dp"
                                    android:paddingBottom="5dp"
                                    android:text="Clear"
                                    android:textColor="@color/colorWhite"></TextView>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/calciLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center_horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Add Payment Row"
                                android:textColor="@color/colorWhite"></TextView>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/oneDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$1"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/twoDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$2"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/fiveDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$5"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/tenDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$10"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/twentyDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$20"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/fiftyDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$50"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/hundredDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="$100"
                    android:textColor="@color/colorWhite"></TextView>

                <TextView
                    android:id="@+id/clearDollarTv"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center_horizontal"
                    android:text="Clear"
                    android:textColor="@color/colorWhite"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center"
                    android:text="Total Items : 1"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center"
                    android:text="Total  : 6.25"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center"
                    android:text="Discount : 0.00"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/totalPayableTv"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_corner_bg_filled"
                    android:gravity="center"
                    android:text="Total Payable : 6.25"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/totalPayingsTv"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center"
                    android:text="Total Paying : 2.00"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_filled"
                    android:gravity="center"
                    android:text="Balance : 4.25"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/changeReturnTv"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/yellowfilled"
                    android:gravity="center"
                    android:text="Change Return : 0.00"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_ash_line"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:text="Back"></TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_light_blue_bg_filled"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="Enter"></TextView>
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>