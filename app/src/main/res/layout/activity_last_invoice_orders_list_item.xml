<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/organic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/runningOrdersLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Dine-in"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/runningOrdersBgLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/orderTypeTextView"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Order Id"
                    android:textColor="@color/colorDarkAsh"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:maxLength="15"
                    android:text="Walk-in"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_below="@+id/customer"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Customer"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorDarkAsh"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/customerNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:layout_below="@+id/customer"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Ord123"
                    android:paddingTop="10dp"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="10dp"
                    android:text="Time"
                    android:textColor="@color/colorDarkAsh"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customerNameTextView"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingTop="10dp"
                    android:text="23"
                    android:textColor="@color/redColor"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/table"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="10dp"
                    android:text="Amount"
                    android:textColor="@color/colorDarkAsh"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateTextView"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingTop="10dp"
                    android:text="$23.00"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/runningOrdersBillButton"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/amount"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_blue_filled"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Print"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>