<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/tableHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/runningOrdersOrderNoTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.6"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Order No"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <TextView
                android:id="@+id/runningOrdersTypeTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Order Type"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <TextView
                android:id="@+id/runningOrdersTimeTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1.3"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Time"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <TextView
                android:id="@+id/runningOrdersCustomerNameTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1.1"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text=" Name"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <TextView
                android:id="@+id/runningOrdersCustomerMobileTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1.2"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Mobile"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />


            <TextView
                android:id="@+id/runningOrdersTotalTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.6"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Order Total"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"></TextView>

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <TextView
                android:id="@+id/paymentStatusTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.8"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="Paid"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:visibility="visible"></TextView>

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/addOnSelectedColor" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="1.4"
                android:weightSum="2"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewActionTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_orange_bg"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="View"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/actionTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_green_bg"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="Paid"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:visibility="visible"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tableHeaderLayout"
            android:background="@color/addOnSelectedColor"
            tools:ignore="MissingConstraints"></View>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>